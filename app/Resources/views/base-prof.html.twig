<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %}</title>
        <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('app/bootstrap/css/bootstrap.css') }}" />
        <link rel="stylesheet" href="{{ asset('app/fontawesome5/css/all.css') }}" >
        <link rel="stylesheet" href="{{ asset('app/css/sb-admin-4.css') }}" />
        <link rel="stylesheet" href="{{ asset('app/css/main.css') }}" />

        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body class="fixed-nav sticky-footer bg-light" id="page-top">
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-blue fixed-top" id="mainNav">
        <a class="navbar-brand" href="/">EPSI Montpellier - SuiviPPE Professeur</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav navbar-sidenav" id="exampleAccordion">
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Tableau de bord">
                    <a class="nav-link" href="{{  path("prof_homepage") }}">
                        <i class="fas fa-fw fa-tachometer-alt"></i>
                        <span class="nav-link-text">Tableau de bord</span>
                    </a>
                </li>

                <!-- STAGE/SITUATIONS -->
                <li class="nav-item" data-toggle="tooltip" data-placement="right" title="Les activités">
                    <a class="nav-link nav-link-collapse collapsed" data-toggle="collapse" href="#collapseActivites" data-parent="#exampleAccordion">
                        <i class="fa fa-fw fa-chevron-right"></i>
                        <span class="nav-link-text">Les activités</span>
                    </a>
                    <ul class="sidenav-second-level collapse" id="collapseActivites">
                        <li>
                            <a name="elementA1" href="{{  path("prof_stage_index") }}">Les stages</a>
                        </li>
                        <li>
                            <a name="elementA2" href="{{  path("prof_situation_index") }}">Les situations</a>
                        </li>
                    </ul>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path("logout") }}">
                        <i class="fa fa-fw fa-sign-out-alt"></i>Déconnexion</a>
                </li>
            </ul>
        </div>
    </nav>


    <div class="content-wrapper">
        <div class="container-fluid">
            {% block body %}{% endblock %}

            <script src="{{ asset('app/js/jquery-3.2.1.js') }}"></script>
            <script src="{{ asset('app/bootstrap/js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('app/js/jquery.easing.min.js') }}"></script>
            <script src="{{ asset('app/js/sb-admin.js') }}"></script>

            {% block javascripts %}{% endblock %}
        </div>
    </div>
    <!-- /.container-fluid-->
    <!-- /.content-wrapper-->
    <footer class="sticky-footer">
        <div class="container">
            <div class="row">
                <div class="col-md-3"><a href="http://www.epsi.fr/" target="_blank" title="Ecole informatique">Le site de l'école EPSI</a></div>
                <div class="col-md-4">Version 0.1.2.0 en cours de développement</div>
            </div>
        </div>
    </footer>

    </body>
</html>
