{% extends 'base.html.twig' %}

{% block title %}
Mon profil
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Mon profil</h1>
    </div>
</div>

<form action="{{ path('profil')}}" method="post">
    {%  if (erreur) %} {{ erreur }} {% endif %}

    <div class="form-row">
        <div class="form-group col-md-3">
            <label for="classe">Classe:</label>
            <input type="text" disabled="disabled" class="form-control" value="{{ utilisateur.classe }}" />
        </div>
        <div class="form-group col-md-3">
            <label for="nom">Nom:</label>
            <input type="text" disabled="disabled" class="form-control" value="{{ utilisateur.nom }}" />
        </div>
        <div class="form-group col-md-3">
            <label for="prenom">Prénom:</label>
            <input type="text" disabled="disabled" class="form-control" value="{{ utilisateur.prenom }}" />
        </div>
        <div class="form-group col-md-3">
            <label for="mail">Mail:</label>
            <input type="text" disabled="disabled" class="form-control" value="{{ utilisateur.mail }}" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="situation_codelangage">Parcours: </label>
            <input type="text" disabled="disabled" class="form-control" value="{{ utilisateur.numparcours.libelle }}" />
        </div>
        <div class="form-group col-md-3">
            <label for="utilisateur_numexam">Numéro examen:</label>
            <input type="text" id="utilisateur_numexam" name="utilisateur_numexam" class="form-control" value="{{ utilisateur.numexamen }}" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-2">
            <label>Sexe: </label>
            <div>
                <input name="utilisateur_sexe"
                        {% if utilisateur.sexe == 1 %} checked {% endif %}
                       type="radio" value="1">&nbsp;F
                <input name="utilisateur_sexe"
                        {% if utilisateur.sexe == 2 %} checked {% endif %}
                       type="radio" value="2">&nbsp;M
            </div>
        </div>

        <div class="form-group col-md-4">
            <label for="utilisateur_datenaissance">Date de naissance</label>
            <input type="text" id="utilisateur_datenaissance" name="utilisateur_datenaissance" required="required" class="form-control" value="{{  utilisateur.datenaissance | date("d/m/Y") }}" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="utilisateur_adresse">Adresse complète:</label>
            <textarea id="utilisateur_adresse" name="utilisateur_adresse" required="required" class="form-control">{{ utilisateur.adresse }}</textarea>
        </div>
    </div>

    <input type="submit" id="submit" name="submit" class="btn btn-success" value="Valider" />
</form>
{% endblock %}

{% block javascripts %}
    {% javascripts
        'bundles/app/bootstrap/js/bootstrap-datepicker.js'
        'bundles/app/bootstrap/js/bootstrap-datepicker.fr.js'
        'bundles/app/js/profil.edit.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}