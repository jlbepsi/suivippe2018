<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>Connexion</title>

    <link rel="stylesheet" href="{{ asset('bundles/app/bootstrap/css/bootstrap.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/app/fontawesome/css/fontawesome-all.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/app/css/sb-admin-4.css') }}" />

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>

<div class="container">

    <div class="card card-login mx-auto mt-5">
        <div class="card-header">Suivi PPE</div>
        <div class="card-body">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('login') }}" method="post">
                <fieldset>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="far fa-fw fa-user"></i></span>
                            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Entrez votre identifant" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="far fa-fw fa-key"></i></span>
                            <input class="form-control" type="password" id="password" name="_password" placeholder="Entrez votre mot de passe" />
                        </div>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">
                            Connexion
                            <i class="far fa-sign-in-alt"></i>
                        </button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

</div>

<script src="{{ asset('bundles/app/js/jquery-3.2.1.js') }}"></script>
<script src="{{ asset('bundles/app/bootstrap/js/bootstrap.min.js') }}"></script>

</body>
</html>

